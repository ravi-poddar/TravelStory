<%- include("../partials/header") %>
<div class="container text-center">
    <h1>Add New Story</h1>
<form action="/stories" method="POST" style="width:30%; margin: 20px auto;">
    <div class="form-group">
        <input class="form-control" type="text" name="name" placeholder="Title">
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="country" placeholder="Country">
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="image" placeholder="Image Url">
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="description" placeholder="Description">
    </div>
    <div class="form-group">
        <button class="form-control btn-primary" style="display:block;">Submit</button>
    </div>
</form>
<a href="/stories">Go Back</a>
</div>
<%- include("../partials/footer") %>