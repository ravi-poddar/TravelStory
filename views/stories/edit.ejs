<%- include("../partials/header") %>
<div class="container text-center">
    <h1>Edit <%= story.name %></h1>
<form action="/stories/<%= story._id %>?_method=PUT" method="POST" style="width:30%; margin: 20px auto;">
    <div class="form-group">
        <input class="form-control" type="text" name="story[name]" value="<%=story.name %>">
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="story[country]" value="<%= story.country %>">
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="story[image]" value="<%=story.image %>">
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="story[description]" value="<%=story.description %>"">
    </div>
    <div class="form-group">
        <button class="form-control btn-primary" style="display:block;">Submit</button>
    </div>
</form>
<a href="/stories/<%= story._id %>">Go Back</a>
</div>
<%- include("../partials/footer") %>