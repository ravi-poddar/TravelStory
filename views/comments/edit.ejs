<%- include("../partials/header") %>
<div class="container text-center">
    <h1>Edit Comment</h1>
<form action="/stories/<%= story_id%>/comments/<%= comment._id %>?_method=PUT" method="POST" style="width:30%; margin: 20px auto;">
    <div class="form-group">
        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
    </div>
    <div class="form-group">
        <button class="form-control btn-primary" style="display:block;">Submit</button>
    </div>
</form>
<a class=" btn-primary btn" href="/stories/<%= stories_id%>">Go Back</a>
</div>
<%- include("../partials/footer") %>
