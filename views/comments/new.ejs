<%- include("../partials/header") %>
<div class="container text-center">
    <h1>Add New Comment To <%= story.name %></h1>
<form action="/stories/<%= story._id%>/comments" method="POST" style="width:30%; margin: 20px auto;">
    <div class="form-group">
        <input class="form-control" type="text" name="comment[text]" placeholder="Enter Your comment">
    </div>
    <div class="form-group">
        <button class="form-control btn-primary" style="display:block;">Submit</button>
    </div>
</form>
<a class=" btn-primary btn" href="/stories/<%= story._id%>">Go Back</a>
</div>
<%- include("../partials/footer") %>

